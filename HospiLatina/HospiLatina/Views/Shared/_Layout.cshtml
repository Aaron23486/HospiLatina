<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospiLatina</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HospiLatina.styles.css" asp-append-version="true" />
</head>
<style>
    .active-link {
        color: #007bff; /* Azul Bootstrap para enlaces activos, ajusta según tu esquema de color */
        font-weight: bold;
    }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HospiLatina</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @foreach (var item in new[] {
                        new { Controller = "Home", Action = "Index", Name = "Inicio" },
                        new { Controller = "Home", Action = "Privacy", Name = "Privacidad" },
                        new { Controller = "Estudiantes", Action = "Index", Name = "Estudiantes" },
                        new { Controller = "Pacientes", Action = "Index", Name = "Pacientes" },
                        new { Controller = "Profesores", Action = "Index", Name = "Profesores" },
                        new { Controller = "Procedimientos", Action = "Index", Name = "Procedimientos" },
                        new { Controller = "Citas", Action = "Index", Name = "Citas" },
                        new { Controller = "Equipos", Action = "Index", Name = "Equipos" },
                        new { Controller = "Consultorios", Action = "Index", Name = "Consultorios" },
                        new { Controller = "SalaCirugias", Action = "Index", Name = "Salas de Cirugía" },
                        new { Controller = "Facturas", Action = "Index", Name = "Facturas" },
                        new { Controller = "DetalleFacturas", Action = "Index", Name = "Detalles de Factura" },
                        new { Controller = "Calificaciones", Action = "Index", Name = "Calificaciones" }
                        })
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == item.Controller && ViewContext.RouteData.Values["Action"].ToString() == item.Action ? "active-link" : "")"
                                   asp-area="" asp-controller="@item.Controller" asp-action="@item.Action">@item.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HospiLatina - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
