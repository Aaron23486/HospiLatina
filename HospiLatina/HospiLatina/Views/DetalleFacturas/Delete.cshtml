@model HospiLatina.Data.Entities.DetalleFactura

@{
    ViewData["Title"] = "Eliminar Detalle de Factura";
}

<h1>Eliminar Detalle de Factura</h1>

<h3>¿Estás seguro que deseas eliminar este detalle de factura?</h3>

<div class="card">
    <div class="card-header">
        Detalle de Factura
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factura.IdFactura)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factura.IdFactura)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cantidad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Subtotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Subtotal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factura.Paciente.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factura.Paciente.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Procedimiento.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Procedimiento.Nombre)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdDetalle" />
    <input type="submit" value="Borrar" class="btn btn-outline-danger" />
    <a asp-action="Index" class="btn btn-outline-secondary ml-2">Regresar</a>
</form>
