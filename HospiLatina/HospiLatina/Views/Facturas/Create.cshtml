@model HospiLatina.Data.Entities.Factura

@{
    ViewData["Title"] = "Crear Factura";
}

<h1>Crear Factura</h1>

<div class="card">
    <div class="card-header">
        Crear Factura
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Paciente" class="control-label"></label>
                <select asp-for="IdPaciente" class="form-control" asp-items="ViewBag.IdPaciente">
                    <option value="">Seleccione un paciente</option>
                </select>
                <span asp-validation-for="IdPaciente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" type="date" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DetallesFactura.FirstOrDefault().Cantidad" class="control-label">Cantidad</label>
                <input asp-for="DetallesFactura.FirstOrDefault().Cantidad" class="form-control" />
                <span asp-validation-for="DetallesFactura.FirstOrDefault().Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DetallesFactura.FirstOrDefault().Procedimiento.Nombre" class="control-label">Procedimiento</label>
                <input asp-for="DetallesFactura.FirstOrDefault().Procedimiento.Nombre" class="form-control" />
                <span asp-validation-for="DetallesFactura.FirstOrDefault().Procedimiento.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ml-2">Regresar</a>
            </div>
        </form>
    </div>
