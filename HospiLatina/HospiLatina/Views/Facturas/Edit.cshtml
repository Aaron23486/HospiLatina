@model HospiLatina.Data.Entities.Factura

@{
    ViewData["Title"] = "Editar Factura";
}

<h1>Editar Factura</h1>

<div class="card">
    <div class="card-header">
        Editar Factura
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFactura" />

            <div class="form-group">
                <label asp-for="IdPaciente" class="control-label">Paciente</label>
                <select asp-for="IdPaciente" class="form-control" asp-items="ViewBag.IdPaciente">
                    <option value="">Seleccione un paciente</option>
                </select>
                <span asp-validation-for="IdPaciente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fecha" class="control-label">Fecha</label>
                <input asp-for="Fecha" class="form-control" type="date" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DetallesFactura.FirstOrDefault().Cantidad" class="control-label">Cantidad</label>
                <input asp-for="DetallesFactura.FirstOrDefault().Cantidad" class="form-control" />
                <span asp-validation-for="DetallesFactura.FirstOrDefault().Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Total" class="control-label">Total</label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DetallesFactura.FirstOrDefault().IdProcedimiento" class="control-label">Procedimiento</label>
                <select asp-for="DetallesFactura.FirstOrDefault().IdProcedimiento" class="form-control" asp-items="ViewBag.IdProcedimiento">
                    <option value="">Seleccione un procedimiento</option>
                </select>
                <span asp-validation-for="DetallesFactura.FirstOrDefault().IdProcedimiento" class="text-danger"></span>
            </div>


            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ml-2">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
