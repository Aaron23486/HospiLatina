@model HospiLatina.Data.Entities.Cita

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Cita</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCita" />
            <div class="form-group">
                <label asp-for="Profesor" class="control-label"></label>
                <select asp-for="IdProfesor" class="form-control" asp-items="@(new SelectList(ViewBag.IdProfesor, "Value", "Text", Model.IdProfesor))">
                    <option value="">Seleccione un profesor</option>
                </select>
                <span asp-validation-for="IdProfesor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Procedimiento" class="control-label"></label>
                <select asp-for="IdProcedimiento" class="form-control" asp-items="@(new SelectList(ViewBag.IdProcedimiento, "Value", "Text", Model.IdProcedimiento))">
                    <option value="">Seleccione un procedimiento</option>
                </select>
                <span asp-validation-for="IdProcedimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante" class="control-label"></label>
                <select asp-for="IdEstudiante" class="form-control" asp-items="@(new SelectList(ViewBag.IdEstudiante, "Value", "Text", Model.IdEstudiante))">
                    <option value="">Seleccione un estudiante</option>
                </select>
                <span asp-validation-for="IdEstudiante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input asp-for="Hora" class="form-control" />
                <span asp-validation-for="Hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consultorio" class="control-label"></label>
                <select asp-for="IdConsultorio" class="form-control" asp-items="@(new SelectList(ViewBag.IdConsultorio, "Value", "Text", Model.IdConsultorio))">
                    <option value="">Seleccione un consultorio</option>
                </select>
                <span asp-validation-for="IdConsultorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente" class="control-label"></label>
                <select asp-for="IdPaciente" class="form-control" asp-items="@(new SelectList(ViewBag.IdPaciente, "Value", "Text", Model.IdPaciente))">
                    <option value="">Seleccione un paciente</option>
                </select>
                <span asp-validation-for="IdPaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sala" class="control-label"></label>
                <select asp-for="IdSala" class="form-control" asp-items="@(new SelectList(ViewBag.IdSala, "Value", "Text", Model.IdSala))">
                    <option value="">Seleccione una sala</option>
                </select>
                <span asp-validation-for="IdSala" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ml-2">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
