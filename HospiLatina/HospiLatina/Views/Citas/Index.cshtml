@model IEnumerable<HospiLatina.Data.Entities.Cita>

@{
    ViewData["Title"] = "Index";
}

<h1>Citas</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Nuevo</a>
</p>

<div class="table-responsive" style="height: calc(100vh - 150px); overflow-y: auto;">
    <table id="citasTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                    <br />
                    <input type="text" class="form-control form-control-sm" placeholder="Buscar Fecha" />
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hora)
                    <br />
                    <input type="text" class="form-control form-control-sm" placeholder="Buscar Hora" />
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Profesor.Nombre)
                    <br />
                    <input type="text" class="form-control form-control-sm" placeholder="Buscar Profesor" />
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Procedimiento.Nombre)
                    <br />
                    <input type="text" class="form-control form-control-sm" placeholder="Buscar Procedimiento" />
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estudiante.Nombre)
                    <br />
                    <input type="text" class="form-control form-control-sm" placeholder="Buscar Estudiante" />
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Consultorio.Nombre)
                    <br />
                    <input type="text" class="form-control form-control-sm" placeholder="Buscar Consultorio" />
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.Nombre)
                    <br />
                    <input type="text" class="form-control form-control-sm" placeholder="Buscar Paciente" />
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sala.Nombre)
                    <br />
                    <input type="text" class="form-control form-control-sm" placeholder="Buscar Sala" />
                </th>
                <th class="text-center">
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="height: 60px;">
                    <!-- Aplica una altura fija -->
                    <td>
                        @item.Fecha.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profesor.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Procedimiento.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estudiante.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Consultorio.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paciente.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sala.Nombre)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdCita" class="btn btn-outline-primary ml-2">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdCita" class="btn btn-outline-info ml-2">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdCita" class="btn btn-outline-danger ml-2">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#citasTable').DataTable({
                "order": [[0, "asc"]], // Orden inicial por la primera columna
                "paging": true, // Habilitar paginación
                "searching": true, // Mantener la búsqueda activada para los filtros de columnas
                "autoWidth": false, // Deshabilitar el auto-ajuste de ancho
                "lengthChange": true, // Habilitar la capacidad de cambiar el número de elementos por página
                "pageLength": 10, // Número inicial de registros por página
                "lengthMenu": [10, 25, 50], // Opciones para el número de registros por página
                "info": false, // Deshabilitar la información de cantidad de registros
                "dom": 'lrt<"bottom"ip>', // Incluir el control de longitud de página
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json" // Traducción al español
                }
            });

            // Filtrar por cada columna usando los inputs en el encabezado
            $('#citasTable thead input').on('keyup change', function () {
                table.column($(this).parent().index()).search(this.value).draw();
            });

            // Mantener el tamaño de las filas consistente
            table.on('draw.dt', function () {
                $('#citasTable tbody tr').css('height', '60px'); // Ajusta el tamaño según sea necesario
            });
        });
    </script>
}
