@model IEnumerable<dynamic>

<div class="card mt-4">
    <div class="card-header">
        <h2>Listado de Doctores con sus Doctores de Apoyo por Especialidad</h2>
    </div>
    <div class="card-body">
        <table id="doctoresApoyoTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Doctor Principal</th>
                    <th>Especialidad</th>
                    <th>Doctores de Apoyo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Doctor</td>
                        <td>@item.Especialidad</td>
                        <td>
                            @if (item.DoctoresDeApoyo != null && item.DoctoresDeApoyo.Count > 0)
                            {
                                @foreach (var apoyo in item.DoctoresDeApoyo)
                                {
                                    <p>@apoyo.Nombre</p>
                                }
                            }
                            else
                            {
                                <p>No hay doctores de apoyo asignados.</p>
                            }
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center">No se encontraron registros de doctores con apoyo.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#doctoresApoyoTable').DataTable({
                "order": [[0, "asc"]],
                "paging": true,
                "searching": true,
                "lengthChange": true,
                "pageLength": 10,
                "info": false,
                "autoWidth": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });
    </script>
}
