@model IEnumerable<dynamic>

<div class="card mt-4">
    <div class="card-header">
        <h2>Horarios Disponibles por Especialidad y Doctor</h2>
    </div>
    <div class="card-body">
        <table id="horariosEspecialidadTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Especialidad</th>
                    <th>Doctor</th>
                    <th>Horario Disponible</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Especialidad</td>
                        <td>@item.Doctor</td>
                        <td>@item.HorarioAtencion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#horariosEspecialidadTable').DataTable({
                "order": [[0, "asc"]],
                "paging": true,
                "searching": true,
                "lengthChange": true,
                "pageLength": 10,
                "info": false,
                "autoWidth": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });
    </script>
}
