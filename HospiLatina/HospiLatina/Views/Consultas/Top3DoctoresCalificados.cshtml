@model IEnumerable<dynamic>

<div class="card mt-4">
    <div class="card-header">
        <h2>Top 3 de Doctores Mejor Calificados</h2>
    </div>
    <div class="card-body">
        <table id="topCalificadosTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Doctor</th>
                    <th>Puntuación Promedio</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Doctor</td>
                        <td>@item.PromedioCalificacion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#topCalificadosTable').DataTable({
                "order": [[1, "desc"]],
                "paging": true,
                "searching": true,
                "lengthChange": true,
                "pageLength": 3,
                "info": false,
                "autoWidth": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });
    </script>
}
