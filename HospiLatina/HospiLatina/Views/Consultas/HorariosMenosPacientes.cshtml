@model IEnumerable<dynamic>

<div class="card mt-4">
    <div class="card-header">
        <h2>Días de la Semana y Horarios con Menos Pacientes Atendidos en Promedio</h2>
    </div>
    <div class="card-body">
        <table id="diasMenosPacientesTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Día de la Semana</th>
                    <th>Horario</th>
                    <th>Promedio de Pacientes Atendidos</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DiaSemana</td>
                        <td>@item.Horario</td>
                        <td>@item.PromedioPacientes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#diasMenosPacientesTable').DataTable({
                "order": [[2, "asc"]],
                "paging": true,
                "searching": true,
                "lengthChange": true,
                "pageLength": 10,
                "info": false,
                "autoWidth": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });
    </script>
}
