{
  "Logging": {
    "LogLevel": {
      "Default": "Information", // Este valor establece el nivel de registro por defecto de la aplicación a "Information". Esto significa que se registrarán mensajes informativos, de advertencia, de error y críticos.
      "Microsoft.AspNetCore": "Warning" // Este valor ajusta específicamente el nivel de registro para los componentes de ASP.NET Core a "Warning", lo que significa que solo se registrarán mensajes de advertencia, error y críticos, excluyendo los informativos.
    }
  },
  "AllowedHosts": "*", // Esta configuración permite que la aplicación escuche peticiones de cualquier host. En producción, podrías restringir esto a dominios específicos para mayor seguridad.

  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=HospitalLatina;Trusted_Connection=True;MultipleActiveResultSets=true"
    // Esta cadena de conexión se utiliza para conectar la aplicación a una base de datos SQL Server.
    // - "Server=(localdb)\\MSSQLLocalDB" especifica que la base de datos está alojada en una instancia local de SQL Server (localdb).
    // - "Database=HospitalLatina" especifica el nombre de la base de datos que se va a utilizar.
    // - "Trusted_Connection=True" indica que se utilizará la autenticación de Windows para conectarse a la base de datos.
    // - "MultipleActiveResultSets=true" permite múltiples conjuntos de resultados activos en la misma conexión, lo cual es útil en escenarios donde se requieren múltiples consultas simultáneamente.
  }
}
